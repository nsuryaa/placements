Copy code
function drawLine(x1, y1, x2, y2):
    // Calculate differences between the coordinates
    dx = x2 - x1
    dy = y2 - y1

    // Determine the sign of the differences
    signX = sign(dx)
    signY = sign(dy)

    // Take absolute values of differences
    dx = abs(dx)
    dy = abs(dy)

    // Determine the major axis
    if dx > dy:
        // Swap the values of dx and dy if the line is steep
        swap(dx, dy)
        steep = false
    else:
        steep = true

    // Initialize decision parameters for the main loop
    decisionParameter = 2 * dy - dx

    // Initialize current position
    x = x1
    y = y1

    // Plot the initial point
    plot(x, y)

    // Main loop
    for i from 1 to dx:
        // Update current position based on the sign of differences
        if steep:
            y = y + signY
        else:
            x = x + signX

        // Update decision parameter
        decisionParameter = decisionParameter + 2 * dy - 2 * dx

        // Determine if y should be incremented
        if decisionParameter >= 0:
            if steep:
                x = x + signX
            else:
                y = y + signY

            decisionParameter = decisionParameter - 2 * dx

        // Plot the current point
        plot(x, y)

// Function to determine the sign of a number
function sign(num):
    if num > 0:
        return 1
    else if num < 0:
        return -1
    else:
        return 0

// Function to swap two values
function swap(a, b):
    temp = a
    a = b
    b = temp

